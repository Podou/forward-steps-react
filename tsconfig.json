{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "sourceMap": true,
    "noImplicitAny": true,
    "allowJs": false,
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "alwaysStrict": false,
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2017",
      "esnext"
    ],
    "baseUrl": ".",
    "rootDirs": [
      "src",
    ]
  },
  "awesomeTypescriptLoaderOptions": {
    // "useCache": true,

    "useBabel": true,
    "babelOptions": {
      "babelrc": false,
    },
    "forkChecker": true,
    "useWebpackText": true,
    "transpileOnly": true
  },
  "include": [
    "src/**/*",
    // "stories/**/*"
  ],
  "exclude": [
    "node_modules/",
    "src/alphagen",
    "**/__tests__/*",
    "dist/"
  ]
}
